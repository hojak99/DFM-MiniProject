<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="org.dfm.miniproject.miniproject.mapper.BoardMapper" >

	<select id = "getOpenBoardList"  resultType="org.dfm.miniproject.miniproject.dto.BoardDTO">
		select
			*
		from
			board
		where
			open_yn = 'Y'
	</select>

	<select id = "getAllBoardList" resultType="org.dfm.miniproject.miniproject.dto.BoardDTO">
		select
			*
		from
			board
	</select>
	
	<insert id="insertBoard" parameterType="org.dfm.miniproject.miniproject.dto.BoardDTO">
		insert into board (title, content, user_id)
		values 
		(#{title}, #{content}, #{user_id})
	</insert>
</mapper>